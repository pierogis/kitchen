generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FlavorType {
  number
  color
  text
  image
}

enum Direction {
  in
  out
}

model Flavor {
  id             Int          @id @default(autoincrement())
  ingredientId   Int
  type           FlavorType
  name           String       @db.VarChar(255)
  value          Int
  ingredient     Ingredient   @relation(fields: [ingredientId], references: [id])
  directions     Direction[]
  inConnections  Connection[] @relation("Flavor_inConnections")
  outConnections Connection[] @relation("Flavor_outConnections")
}

model Ingredient {
  id                Int             @id @default(autoincrement())
  recipeId          Int
  recipe            Recipe          @relation(fields: [recipeId], references: [id])
  flavors           Flavor[]
  subIngredients    SubIngredient[] @relation("Ingredient_subIngredients")
  parentIngredients SubIngredient[] @relation("Ingredient_parentIngredients")
  connections       Connection[]
}

model SubIngredient {
  parentIngredientId Int
  subIngredientId    Int
  parentIngredient   Ingredient @relation("Ingredient_parentIngredients", fields: [parentIngredientId], references: [id])
  subIngredient      Ingredient @relation("Ingredient_subIngredients", fields: [subIngredientId], references: [id])

  @@id([parentIngredientId, subIngredientId])
}

model Connection {
  parentIngredientId       Int
  parentIngredient         Ingredient @relation(fields: [parentIngredientId], references: [id])
  inSubIngredientFlavorId  Int
  inSubIngredientFlavor    Flavor     @relation("Flavor_inConnections", fields: [inSubIngredientFlavorId], references: [id])
  outSubIngredientFlavorId Int
  outSubIngredientFlavor   Flavor     @relation("Flavor_outConnections", fields: [outSubIngredientFlavorId], references: [id])

  @@id([parentIngredientId, inSubIngredientFlavorId, outSubIngredientFlavorId])
}

model Recipe {
  id          Int          @id @default(autoincrement())
  ingredients Ingredient[]
}
