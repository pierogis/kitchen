		"lint:fix": "eslint --fix --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. . ; prisma format",
		"db:migrate": "prisma migrate dev",
		"db:seed": "prisma db seed",
		"db:reset": "prisma migrate reset",
		"tauri": "tauri"
	},
	"devDependencies": {
		"@playwright/test": "^1.25.0",
